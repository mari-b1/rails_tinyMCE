<%= form_with model: article   do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, 'error') %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, style: 'display: block', class: 'label' %>
    <%= form.text_field :title, class: 'input' %>
  </div>
  <div class='field'>
    <%= form.label :body, style: 'display: block', class: 'label' %>
    <%= form.text_area :body, class: 'tinymce', rows: 20, cols: 80, id: 'TinyEditor' %>
    <%= tinymce %>
  </div>
  <div>
    <%= form.submit class: 'button is-primary is-light' %>
  </div>
<% end %>
